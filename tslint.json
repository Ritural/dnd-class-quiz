{
  "defaultSeverity": "error",
  "extends": ["tslint-config-prettier", "tslint:recommended", "tslint-react"],
  "rules": {
    "quotemark": [true, "single"],
    "jsx-no-multiline-js": false,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-last",
        "named-imports-order": "case-insensitive",
        "grouped-imports": true,
        "groups": [
          {
            "name": "Third Party Packages",
            "match": "/^@types/classnames$|^@types/jest$|^@types/react$|^@types/react-dom$|^@types/react-redux$|^@types/react-router$|^@types/react-router-dom$|^@types/webpack-env$|^classnames$|^connected-react-router$|^history$|^jest$|^react$|^react-dom$|^react-pose$|^react-redux$|^react-router$|^react-router-dom$|^react-test-renderer$|^redux$|^redux-devtools$|^redux-responsive$|^redux-saga$|^ts-jest$|^tslint$|^tslint-react$|^typescript$|^@redux-saga/",
            "order": 10
          },
          {
            "name": "Our files",
            "match": "",
            "order": 20
          }
        ]
      }
    ],
    "member-access": false,
    "no-console": false,
    "object-literal-sort-keys": false,
    "no-bitwise": {
      "severity": "warn"
    },
    "prefer-for-of": false,
    "no-var-requires": {
      "severity": "warn"
    },
    "only-arrow-functions": false,
    "max-line-length": false,
    "no-empty": false,
    "max-classes-per-file": false,
    "no-string-literal": false,
    "jsx-self-close": false,
    "jsx-no-lambda": false,
    "array-bracket-spacing": "always",
    "no-relative-imports": true,
    "arrow-parens": true
  }
}
